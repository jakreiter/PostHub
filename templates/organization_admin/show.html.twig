{% extends 'base.html.twig' %}

{% block title %}Organization{% endblock %}

{% block body %}
    <h1>Organization</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ organization.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ organization.name }}</td>
            </tr>
            <tr>
                <th>Location</th>
                <td>{{ organization.location }}</td>
            </tr>
            <tr>
                <th>Owner</th>
                <td>{{ organization.owner }}</td>
            </tr>
            <tr>
                <th>Scan</th>
                <td>{{ organization.scan ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('organization_admin_index') }}" class="btn btn-secondary">back to list</a>

    <a href="{{ path('organization_admin_edit', {'id': organization.id}) }}" class="btn btn-primary">edit</a>

    {{ include('organization_admin/_delete_form.html.twig') }}
{% endblock %}
