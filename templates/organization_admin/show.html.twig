{% extends 'base.html.twig' %}

{% block title %}Organization{% endblock %}

{% block body %}
    <h1>Organization</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>{{ "Id"|trans }}</th>
                <td>{{ organization.id }}</td>
            </tr>
            <tr>
                <th>{{ "Name"|trans }}</th>
                <td>{{ organization.name }}</td>
            </tr>
            <tr>
                <th>{{ "Location"|trans }}</th>
                <td>{{ organization.location }}</td>
            </tr>
            <tr>
                <th>{{ "Owner"|trans }}</th>
                <td>{{ organization.owner }}</td>
            </tr>
            <tr>
                <th>{{ "Scan"|trans }}</th>
                <td>{{ organization.scan ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>




    <div class="container-fluid">
        <div class="row">
            <div class="col-md-2">
                <a href="{{ path('organization_admin_index') }}"
                   class="btn btn-secondary btn-block">{{ "Back to list"|trans }}</a>
            </div>
            <div class="col-md-2">
                <a href="{{ path('dh_auditor_show_entity_history', {'id': organization.id, 'entity': 'App-Entity-Organization'}) }}"
                   class="btn btn-outline-info btn-block">{{ "Audit"|trans }}</a>
            </div>
            <div class="col-md-2">
                {{ include('organization_admin/_delete_form.html.twig') }}
            </div>
            <div class="col-md-2">
                <a href="{{ path('organization_admin_edit', {'id': organization.id}) }}"
                   class="btn btn-primary btn-block">{{ "Edit"|trans }}</a>
            </div>
        </div>
    </div>

{% endblock %}
