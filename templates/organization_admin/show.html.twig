{% extends 'base.html.twig' %}

{% block title %}{{ organization.name }} (Organization){% endblock %}

{% block body %}
    <h1><strong>{{ organization.name }}</strong> (Organization)</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>{{ "Id"|trans }}</th>
            <td>{{ organization.id }}</td>
        </tr>
        <tr>
            <th>{{ "Name"|trans }}</th>
            <td>{{ organization.name }}</td>
        </tr>
        <tr>
            <th>{{ "Comma separated emails"|trans }}</th>
            <td>{{ organization.commaSeparatedEmails }}</td>
        </tr>

        <tr>
            <th>{{ "Location"|trans }}</th>
            <td>{% if organization.location %}
                <a href="{{ path('location_admin_show', {'id': organization.location.id}) }}" class="">{{ organization.location }}</a>
                {% endif %}
            </td>
        </tr>
        <tr>
            <th>{{ "Owner"|trans }}</th>
            <td>
                {% if organization.owner %}
                    <a href="{{ path('user_admin_show', {'id': organization.owner.id}) }}"
                                              class="">{{ organization.owner }}</a>
                {% endif %}
            </td>
        </tr>
        <tr>
            <th>{{ "Scan"|trans }}</th>
            <td>{{ organization.scan ? 'Yes' : 'No' }}</td>
        </tr>
        <tr>
            <th>{{ "Allow scan download without login"|trans }}</th>
            <td>{{ organization.allowScanDownloadWithoutLogin ? 'Yes' : 'No' }}</td>
        </tr>
        </tbody>
    </table>




    <div class="container-fluid">
        <div class="row">

            <div class="col-md-2">
                <a href="{{ path('dh_auditor_show_entity_history', {'id': organization.id, 'entity': 'App-Entity-Organization'}) }}"
                   class="btn btn-outline-info btn-block">{{ "Audit"|trans }}</a>
            </div>
            <div class="col-md-2">
                <a href="{{ path('organization_notifications_admin_show', {'id': organization.id}) }}"
                   class="btn btn-outline-primary btn-block">{{ "Notifications"|trans }}</a>
            </div>
            <div class="col-md-2">
                {{ include('organization_admin/_delete_form.html.twig') }}
            </div>
            <div class="col-md-2">
                <a href="{{ path('organization_admin_edit', {'id': organization.id}) }}"
                   class="btn btn-primary btn-block">{{ "Edit"|trans }}</a>
            </div>
        </div>
    </div>

{% endblock %}
