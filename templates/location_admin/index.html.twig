{% extends 'base.html.twig' %}

{% block title %}Location index{% endblock %}

{% block body %}
    <h1>Location index</h1>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Street</th>
                <th>HouseNumber</th>
                <th>ApartmentNumber</th>
                <th>PostalCode</th>
                <th>City</th>
                <th>Created</th>
                <th>Updated</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for location in locations %}
            <tr>
                <td>{{ location.id }}</td>
                <td>{{ location.name }}</td>
                <td>{{ location.street }}</td>
                <td>{{ location.houseNumber }}</td>
                <td>{{ location.apartmentNumber }}</td>
                <td>{{ location.postalCode }}</td>
                <td>{{ location.city }}</td>
                <td>{{ location.created ? location.created|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ location.updated ? location.updated|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('location_admin_show', {'id': location.id}) }}">show</a>
                    <a href="{{ path('location_admin_edit', {'id': location.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('location_admin_new') }}">Create new</a>
{% endblock %}
