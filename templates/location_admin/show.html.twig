{% extends 'base.html.twig' %}

{% block title %}Location{% endblock %}

{% block body %}
    <h1>Location</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ location.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ location.name }}</td>
            </tr>
            <tr>
                <th>Street</th>
                <td>{{ location.street }}</td>
            </tr>
            <tr>
                <th>HouseNumber</th>
                <td>{{ location.houseNumber }}</td>
            </tr>
            <tr>
                <th>ApartmentNumber</th>
                <td>{{ location.apartmentNumber }}</td>
            </tr>
            <tr>
                <th>PostalCode</th>
                <td>{{ location.postalCode }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ location.city }}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{{ location.created ? location.created|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Updated</th>
                <td>{{ location.updated ? location.updated|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('location_admin_index') }}">back to list</a>

    <a href="{{ path('location_admin_edit', {'id': location.id}) }}">edit</a>

    {{ include('location_admin/_delete_form.html.twig') }}
{% endblock %}
