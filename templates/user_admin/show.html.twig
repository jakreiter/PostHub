{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>User</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Username</th>
                <td>{{ user.username }}</td>
            </tr>
            <tr>
                <th>FirstName</th>
                <td>{{ user.firstName }}</td>
            </tr>
            <tr>
                <th>LastName</th>
                <td>{{ user.lastName }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ user.password }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>NewEmail</th>
                <td>{{ user.newEmail }}</td>
            </tr>
            <tr>
                <th>NewEmailToken</th>
                <td>{{ user.newEmailToken }}</td>
            </tr>
            <tr>
                <th>GoogleId</th>
                <td>{{ user.googleId }}</td>
            </tr>
            <tr>
                <th>Enabled</th>
                <td>{{ user.enabled ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{{ user.created ? user.created|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Updated</th>
                <td>{{ user.updated ? user.updated|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>LastPassResetRequest</th>
                <td>{{ user.lastPassResetRequest ? user.lastPassResetRequest|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>PassResetToken</th>
                <td>{{ user.passResetToken }}</td>
            </tr>
            <tr>
                <th>IpAddressDuringRegistration</th>
                <td>{{ user.ipAddressDuringRegistration }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('user_admin_index') }}">back to list</a>

    <a href="{{ path('user_admin_edit', {'id': user.id}) }}">edit</a>

    {{ include('user_admin/_delete_form.html.twig') }}
{% endblock %}
